<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Class8" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="rightToast">
        <item name="colorBackground">#D5D0D0</item>
        <item name="textColor">#467C06</item>
        <item name="iconLeft">@drawable/ic_baseline_done_all_24</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">1dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">15dp</item>
    </style>


    <style name="wrongToast">
        <item name="colorBackground">#D10A0A</item>
        <item name="textColor">#000000</item>
        <item name="iconLeft">@drawable/ic_baseline_close_24</item>
        <item name="strokeColor">#000</item>
        <item name="strokeWidth">1dp</item>
        <item name="length">LONG</item>
        <item name="cornerRadius">15dp</item>
    </style>

    <style name="button">
        <item name="colorBackground">#D51053</item>
    </style>

    <style name="Theme.Class8.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Class8.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Class8.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>